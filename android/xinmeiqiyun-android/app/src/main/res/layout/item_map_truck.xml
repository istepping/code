<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/map_truck">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="222dp"
        android:layout_height="166.5dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/item_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/default_avatar" />

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="2.5dp"
                    android:paddingTop="2.5dp">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/drawablePadding_10"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text3"
                            android:textSize="@dimen/text_s" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <ImageView
                        android:id="@+id/item_close"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/item_num"
                        style="@style/border_item"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" />

                </com.zhy.autolayout.AutoFrameLayout>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/item_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:textColor="@color/text6"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/item_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text6"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:textColor="@color/text6"
                android:textSize="@dimen/text_xs" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/divider_horizontal"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/truck_detail_page"
                android:textColor="@color/text9"
                android:textSize="@dimen/text_xs" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/height_32"
                android:layout_gravity="center_vertical"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/item_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/truck_detail_contact"
                android:textColor="@color/yellow"
                android:textSize="@dimen/text_xs" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>