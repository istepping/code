<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginOrPadding_10"
        android:layout_marginLeft="@dimen/marginOrPadding_20"
        android:layout_marginRight="@dimen/marginOrPadding_20"
        android:layout_marginTop="@dimen/marginOrPadding_10"
        android:background="@drawable/shape_container"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/drawablePadding_20"
            android:layout_marginLeft="@dimen/drawablePadding_20"
            android:layout_marginTop="@dimen/drawablePadding_20"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_m" />

            <TextView
                android:id="@+id/item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginOrPadding_20"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text6"
                android:textSize="@dimen/text_s" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginOrPadding_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_avatar"
                    android:layout_width="@dimen/avatar_52"
                    android:layout_height="@dimen/avatar_52"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginOrPadding_20"
                    android:drawablePadding="@dimen/drawablePadding_20"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text6"
                    android:textSize="@dimen/text_s" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/drawablePadding_20"
            android:layout_marginLeft="@dimen/marginOrPadding_20"
            android:layout_marginTop="@dimen/drawablePadding_20"
            android:background="@color/divider" />

        <ImageView
            android:id="@+id/item_locate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/marginOrPadding_30"
            android:paddingRight="@dimen/marginOrPadding_15"
            android:src="@drawable/locate_people" />

        <ImageView
            android:id="@+id/item_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/marginOrPadding_15"
            android:paddingRight="@dimen/marginOrPadding_30"
            android:src="@drawable/call_people" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>