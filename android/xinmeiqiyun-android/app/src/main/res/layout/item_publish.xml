<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_background"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_container"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/marginOrPadding_10"
        android:layout_marginLeft="@dimen/marginOrPadding_20"
        android:layout_marginRight="@dimen/marginOrPadding_20"
        android:layout_marginTop="@dimen/marginOrPadding_10"
        android:padding="25px">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/item_wrap"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="13px"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/marginOrPadding_10"
                    android:paddingTop="@dimen/marginOrPadding_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cargo_circle" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_line_vertical"
                        android:layerType="software" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cargo_circle" />

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginOrPadding_10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_location_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_m" />

                    <TextView
                        android:id="@+id/item_location_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/marginOrPadding_20"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_m" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.xmw.qiyun.view.HorizontalListView
                android:id="@+id/item_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_38"
                android:layout_marginTop="@dimen/marginOrPadding_20" />

            <View
                android:layout_marginTop="25px"
                style="@style/divider_horizontal" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/cargo_time"
                android:drawablePadding="@dimen/drawablePadding_15"
                android:gravity="center_vertical"
                android:textColor="@color/text9"
                android:textSize="@dimen/text_xxs" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_icon_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/publish_resend"/>

                <ImageView
                    android:id="@+id/item_icon_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/publish_city"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_stream_share"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/publish_stream_edit"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/item_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/publish_stream_send"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/item_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/publish_stream_resend"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/item_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/publish_stream_close"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/publish_stream_delete"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_xs" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>