<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upload_dialog"
        android:background="@color/page_background"
        android:orientation="vertical">

        <include layout="@layout/title_common" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="60px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/verify_progress_one_blue"
                        android:gravity="center"
                        android:text="@string/verify_personal"
                        android:textColor="@color/blue" />

                    <View
                        android:layout_width="200px"
                        android:layout_height="1px"
                        android:background="@color/text9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/verify_progress_two"
                        android:gravity="center"
                        android:text="@string/verify_company"
                        android:textColor="@color/text9" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View style="@style/divider_horizontal" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/verify_personal_name"
                    android:layout_width="match_parent"
                    android:layout_height="89px"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/verify_personal_name"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <TextView
                        android:id="@+id/verify_personal_name_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingRight="20px"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/item_back" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View style="@style/divider_horizontal" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/verify_personal_code"
                    android:layout_width="match_parent"
                    android:layout_height="89px"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/verify_personal_code"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <TextView
                        android:id="@+id/verify_personal_code_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:maxLength="18"
                        android:paddingRight="20px"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/item_back" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View style="@style/divider_horizontal" />

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginTop="15px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/verify_personal_auth"
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/verify_personal_auth"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <ImageView
                        android:id="@+id/verify_personal_auth_detail"
                        android:layout_width="183px"
                        android:layout_height="136px"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitEnd"
                        android:src="@drawable/verify_upload_default" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View style="@style/divider_horizontal" />

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginTop="15px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/verify_personal_image"
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/verify_personal_image"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <ImageView
                        android:id="@+id/verify_personal_image_detail"
                        android:layout_width="183px"
                        android:layout_height="136px"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitEnd"
                        android:src="@drawable/verify_upload_default" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View style="@style/divider_horizontal" />

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginTop="15px" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89px"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/verify_personal_card"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="15px"
                        android:paddingTop="15px">

                        <CheckBox
                            android:id="@+id/verify_personal_card_true"
                            style="@style/CustomCheckboxTheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:paddingLeft="@dimen/marginOrPadding_40"
                            android:text="@string/verify_chosen_is"
                            android:textColor="@drawable/selector_tab_text"
                            android:textSize="@dimen/text_s" />

                        <CheckBox
                            android:id="@+id/verify_personal_card_false"
                            style="@style/CustomCheckboxTheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/marginOrPadding_40"
                            android:text="@string/verify_chosen_not"
                            android:textColor="@drawable/selector_tab_text"
                            android:textSize="@dimen/text_s" />

                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

                <View style="@style/divider_horizontal" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/verify_personal_card"
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/verify_personal_card"
                        android:textColor="@color/text6"
                        android:textSize="@dimen/text_s" />

                    <ImageView
                        android:id="@+id/verify_personal_card_detail"
                        android:layout_width="183px"
                        android:layout_height="136px"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitEnd"
                        android:src="@drawable/verify_upload_default" />

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:id="@+id/verify_personal_card_divider"
                    style="@style/divider_horizontal" />

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginTop="15px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="89px"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/verify_mention"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:text="@string/verify_mention"
                    android:textColor="@color/green"
                    android:textSize="28px" />

                <View style="@style/divider_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="20px"
                    android:text="@string/verify_note"
                    android:textColor="@color/text3"
                    android:textSize="30px" />

                <View style="@style/divider_horizontal" />

                <TextView
                    android:id="@+id/confirm"
                    style="@style/confirm"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="40px"
                    android:text="@string/verify_next" />

            </com.zhy.autolayout.AutoLinearLayout>

        </ScrollView>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>