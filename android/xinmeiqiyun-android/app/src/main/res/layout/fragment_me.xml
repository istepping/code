<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical">

    <include layout="@layout/title_main" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="39px"
        android:paddingTop="39px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="115px"
            android:layout_height="120px">

            <ImageView
                android:id="@+id/me_avatar"
                android:layout_width="@dimen/avatar_115"
                android:layout_height="@dimen/avatar_115"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/me_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23px"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="400px"
            android:textColor="@color/text6"
            android:textSize="@dimen/text_l" />

        <TextView
            android:id="@+id/me_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19px"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_s" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View style="@style/divider_horizontal" />

    <View
        style="@style/divider_horizontal"
        android:layout_marginTop="20px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/me_verify"
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/verify_title"
            android:textColor="@color/text6"
            android:textSize="@dimen/text_s" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/item_back" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View style="@style/divider_horizontal" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/me_approve"
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/information_title"
            android:textColor="@color/text6"
            android:textSize="@dimen/text_s" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/item_back" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View style="@style/divider_horizontal" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/me_store"
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/store_title"
            android:textColor="@color/text6"
            android:textSize="@dimen/text_s" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/item_back" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View style="@style/divider_horizontal" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/me_setting"
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/setting_title"
            android:textColor="@color/text6"
            android:textSize="@dimen/text_s" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/item_back" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View style="@style/divider_horizontal" />

</com.zhy.autolayout.AutoLinearLayout>