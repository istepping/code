<scroll-view class='mine-container' scroll-y>
  <view class='userInfo' bindtap='userInfoFun'>
     <image class='userInfo-img' src='{{userInfo.avatarUrl}}'></image>
     <text class='userInfo-nickName'>{{userInfo.nickName}}</text>
  </view>

  <view class='mine'>
     <view class='text judgment' bindtap='walletFun'>我的钱包</view>
     <view class='text judgment' bindtap='serviceFun'>更多服务</view>
     <view class='text judgment' bindtap='collectionFun'>我的收藏</view>
     <view class='text judgment' bindtap='valuationFun'>我的评价</view>
  </view>

    <view class='setting' bindtap='settingFun'>
     <text class='settingText'>设置</text>
     <text class='rightText'>></text>
    </view>
</scroll-view>